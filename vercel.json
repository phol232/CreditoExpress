{
    "version": 2,
    "buildCommand": "cd client && npm install && npm run build",
    "installCommand": "npm install --legacy-peer-deps",
    "builds": [
        {
            "src": "server/api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/api/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ]
}